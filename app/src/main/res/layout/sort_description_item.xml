<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sort_description_item_area"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/sort_description_item"
        android:padding="10dp"
        tools:text="早餐"
        android:textSize="@dimen/normal_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/sort_description_icon"
        android:src="@drawable/check_item"
        android:visibility="gone"
        android:contentDescription="@null"
        app:layout_constraintTop_toTopOf="@id/sort_description_item"
        app:layout_constraintBottom_toBottomOf="@id/sort_description_item"
        app:layout_constraintLeft_toRightOf="@id/sort_description_item"
        android:layout_marginStart="15dp"
        android:layout_width="@dimen/sort_list_icon_size"
        android:layout_height="@dimen/sort_list_icon_size"/>

</androidx.constraintlayout.widget.ConstraintLayout>
