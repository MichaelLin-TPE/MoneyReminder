<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="90dp"
    android:background="@drawable/date_list_background"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="ä¸€"
        android:gravity="center"
        android:id="@+id/date_list_item"
        android:textColor="@color/black"
        android:textSize="@dimen/week_day_text_size"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/date_list_item"
        app:layout_constraintRight_toRightOf="@id/date_list_item"
        android:gravity="center"
        android:id="@+id/date_list_income"
        android:textSize="@dimen/date_list_item_size"
        android:textColor="@color/bule"
        app:layout_constraintTop_toBottomOf="@id/date_list_item"
        tools:text="2000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        app:layout_constraintLeft_toLeftOf="@id/date_list_income"
        app:layout_constraintRight_toRightOf="@id/date_list_income"
        android:gravity="center"
        android:id="@+id/date_list_expenditure"
        android:textSize="@dimen/date_list_item_size"
        android:textColor="@color/red"
        app:layout_constraintTop_toBottomOf="@id/date_list_income"
        android:layout_marginTop="5dp"
        tools:text="2000"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
