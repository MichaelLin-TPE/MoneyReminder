<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sort_type_dialog_area"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:contentDescription="@null"
        android:id="@+id/sort_type_dialog_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/plus"
        android:layout_width="@dimen/sort_type_icon_size"
        android:layout_height="@dimen/sort_list_icon_size"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/sort_type_dialog_icon"
        app:layout_constraintBottom_toBottomOf="@id/sort_type_dialog_icon"
        app:layout_constraintLeft_toRightOf="@id/sort_type_dialog_icon"
        android:layout_marginStart="5dp"
        android:textSize="@dimen/sort_type_content_size"
        android:textColor="@color/app_main_color"
        android:lines="1"
        android:maxLines="1"
        android:ellipsize="end"
        android:id="@+id/sort_type_dialog_content"
        tools:text="飲食"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
