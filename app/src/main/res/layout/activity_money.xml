<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".money.MoneyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/money_tool_bar"
        app:title="@string/app_name"
        app:titleTextColor="@color/white"
        android:background="@color/app_main_color"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/money_logout_btn"
            android:contentDescription="@null"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:src="@drawable/logout"
            android:layout_width="@dimen/logout_icon_size"
            android:layout_height="@dimen/logout_icon_size"/>

    </androidx.appcompat.widget.Toolbar>

    <FrameLayout
        android:id="@+id/money_frame_layout"
        app:layout_constraintTop_toBottomOf="@id/money_tool_bar"
        app:layout_constraintBottom_toTopOf="@id/money_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/money_tab_layout"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tab_layout_height"/>


</androidx.constraintlayout.widget.ConstraintLayout>